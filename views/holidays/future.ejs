<%- layout('layouts/main') %>

<div class="max-w-7xl mx-auto">
  <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-8 gap-4">
    <div>
      <h1 class="text-2xl font-bold text-gray-900 tracking-tight flex items-center gap-3">
        <div class="p-2 bg-green-50 rounded-lg text-green-600">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
        </div>
        Planowane urlopy
      </h1>
      <p class="text-gray-500 mt-1 text-sm ml-[52px]">Zaplanuj swoje przyszłe urlopy.</p>
    </div>
  </div>

  <!-- Navigation tabs -->
  <div class="mb-8">
    <div class="inline-flex items-center bg-gray-50 p-1 rounded-lg border border-gray-200 shadow-sm">
      <a href="/holidays" class="px-4 py-2 rounded-md text-sm font-medium text-gray-500 hover:text-gray-900 transition-all">
        Bieżący miesiąc
      </a>
      <a href="/holidays/future" class="px-4 py-2 rounded-md text-sm font-bold bg-white shadow-sm text-blue-700 transition-all">
        Przyszłe urlopy
      </a>
      <a href="/holidays/history" class="px-4 py-2 rounded-md text-sm font-medium text-gray-500 hover:text-gray-900 transition-all">
        Historia urlopów
      </a>
      <a href="/holidays/employees/by-person" class="px-4 py-2 rounded-md text-sm font-medium text-gray-500 hover:text-gray-900 transition-all">
        Urlopy pracowników
      </a>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    <!-- Add holiday form with calendar -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
      <h3 class="text-lg font-bold text-gray-900 mb-5 flex items-center gap-2">
        <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
        </svg>
        Dodaj przyszły urlop
      </h3>

      <form id="holiday-form" action="/holidays" method="POST" data-public-holidays='<%= JSON.stringify(publicHolidays.map(ph => ph.holiday_date)) %>' data-user-holidays='<%= JSON.stringify((allUserHolidays || []).map(h => h.holiday_date)) %>'>
        <%- include('../partials/csrf-field') %>
        <input type="hidden" id="start_date" name="start_date" required />
        <input type="hidden" id="end_date" name="end_date" />

        <!-- Selected dates display -->
        <div id="selected-dates-display" class="mb-4 p-4 bg-gray-50 rounded-xl border border-gray-200">
          <div class="flex items-center justify-between">
            <div class="flex items-center gap-3">
              <div class="p-2 bg-green-100 rounded-lg">
                <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <div class="text-xs text-gray-500 uppercase tracking-wide font-medium">Wybrany okres</div>
                <div id="date-range-text" class="text-sm font-bold text-gray-900">Wybierz daty w kalendarzu</div>
              </div>
            </div>
            <button type="button" id="clear-selection" class="hidden p-2 text-gray-400 hover:text-red-500 hover:bg-red-50 rounded-lg transition-colors" title="Wyczyść wybór">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </button>
          </div>
          <div id="days-count" class="hidden mt-2 text-xs text-green-600 font-medium"></div>
        </div>

        <!-- Calendar -->
        <div class="calendar-container">
          <!-- Calendar header -->
          <div class="flex items-center justify-between mb-4">
            <button type="button" id="prev-month" class="p-2 hover:bg-gray-100 rounded-lg transition-colors">
              <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
              </svg>
            </button>
            <h4 id="calendar-month-year" class="text-base font-bold text-gray-900"></h4>
            <button type="button" id="next-month" class="p-2 hover:bg-gray-100 rounded-lg transition-colors">
              <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </button>
          </div>

          <!-- Day names -->
          <div class="grid grid-cols-7 gap-1 mb-2">
            <% ['Pn', 'Wt', 'Śr', 'Cz', 'Pt', 'Sb', 'Nd'].forEach(day => { %>
            <div class="text-center text-xs font-bold text-gray-400 uppercase py-2"><%= day %></div>
            <% }) %>
          </div>

          <!-- Calendar grid -->
          <div id="calendar-grid" class="grid grid-cols-7 gap-1"></div>

          <!-- Legend -->
          <div class="mt-4 pt-4 border-t border-gray-100 flex flex-wrap gap-3 text-xs">
            <div class="flex items-center gap-1.5">
              <div class="w-3 h-3 rounded bg-green-500"></div>
              <span class="text-gray-600">Wybrane</span>
            </div>
            <div class="flex items-center gap-1.5">
              <div class="w-3 h-3 rounded bg-emerald-100 border border-emerald-200"></div>
              <span class="text-gray-600">Twój urlop</span>
            </div>
            <div class="flex items-center gap-1.5">
              <div class="w-3 h-3 rounded bg-purple-100 border border-purple-200"></div>
              <span class="text-gray-600">Święto</span>
            </div>
            <div class="flex items-center gap-1.5">
              <div class="w-3 h-3 rounded bg-gray-200 border border-gray-300"></div>
              <span class="text-gray-600">Weekend</span>
            </div>
            <div class="flex items-center gap-1.5">
              <div class="w-3 h-3 rounded bg-gray-100 border border-gray-200"></div>
              <span class="text-gray-600">Przeszłe</span>
            </div>
          </div>
        </div>

        <div class="mt-6">
          <button
            type="submit"
            id="submit-btn"
            disabled
            class="w-full inline-flex justify-center items-center px-8 py-3 border border-gray-300 text-base font-bold rounded-xl text-gray-400 bg-gray-100 cursor-not-allowed transition-all">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            Dodaj urlop
          </button>
        </div>
      </form>
    </div>

    <!-- List of future holidays -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
      <h3 class="text-lg font-bold text-gray-900 mb-5 flex items-center gap-2">
        <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
        </svg>
        Twoje zaplanowane urlopy
      </h3>

      <% if (futureHolidays && futureHolidays.length > 0) { %>
      <div class="space-y-3">
        <% futureHolidays.forEach(holiday => { %>
        <div class="group p-4 rounded-xl border border-gray-200 hover:border-green-300 hover:shadow-sm transition-all bg-white">
          <div class="flex justify-between items-center">
            <div class="flex items-center gap-3">
              <div class="p-2 bg-green-50 rounded-lg">
                <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <div class="text-sm font-bold text-gray-900"><%= holiday.holiday_date %></div>
                <div class="text-xs text-gray-500"><%= new Date(holiday.holiday_date).toLocaleDateString('pl-PL', { weekday: 'long' }) %></div>
              </div>
            </div>

            <div class="opacity-0 group-hover:opacity-100 transition-opacity">
              <form action="/holidays/<%= holiday.id %>/delete" method="POST" class="inline delete-holiday-form">
                <%- include('../partials/csrf-field') %>
                <button type="submit" class="p-1.5 text-gray-400 hover:text-red-600 hover:bg-red-50 rounded-lg transition-colors" title="Usuń">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                  </svg>
                </button>
              </form>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
      <% } else { %>
      <div class="text-center py-8">
        <div class="bg-gray-50 rounded-full w-12 h-12 flex items-center justify-center mx-auto mb-3">
          <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
        </div>
        <p class="text-sm text-gray-500">Brak zaplanowanych urlopów.</p>
      </div>
      <% } %>
    </div>
  </div>
</div>

<script>
document.addEventListener("DOMContentLoaded", function () {
  // Get holidays from form data attributes
  const formEl = document.getElementById('holiday-form');
  const publicHolidays = JSON.parse(formEl.getAttribute('data-public-holidays') || '[]');
  const userHolidays = JSON.parse(formEl.getAttribute('data-user-holidays') || '[]');

  // Calculate tomorrow's date
  const today = new Date();
  today.setHours(0, 0, 0, 0);
  const tomorrow = new Date(today);
  tomorrow.setDate(tomorrow.getDate() + 1);

  // Calendar state - start from current month
  let currentMonth = today.getMonth();
  let currentYear = today.getFullYear();
  let startDate = null;
  let endDate = null;
  let isSelectingEnd = false;

  const monthNames = ['Styczeń', 'Luty', 'Marzec', 'Kwiecień', 'Maj', 'Czerwiec',
                      'Lipiec', 'Sierpień', 'Wrzesień', 'Październik', 'Listopad', 'Grudzień'];

  // Elements
  const calendarGrid = document.getElementById('calendar-grid');
  const monthYearEl = document.getElementById('calendar-month-year');
  const prevMonthBtn = document.getElementById('prev-month');
  const nextMonthBtn = document.getElementById('next-month');
  const startDateInput = document.getElementById('start_date');
  const endDateInput = document.getElementById('end_date');
  const dateRangeText = document.getElementById('date-range-text');
  const daysCountEl = document.getElementById('days-count');
  const clearBtn = document.getElementById('clear-selection');
  const submitBtn = document.getElementById('submit-btn');

  function formatDate(date) {
    const year = date.getFullYear();
    const month = String(date.getMonth() + 1).padStart(2, '0');
    const day = String(date.getDate()).padStart(2, '0');
    return `${year}-${month}-${day}`;
  }

  function formatDisplayDate(date) {
    return date.toLocaleDateString('pl-PL', { day: 'numeric', month: 'short', year: 'numeric' });
  }

  function isWeekend(date) {
    const day = date.getDay();
    return day === 0 || day === 6;
  }

  function isPublicHoliday(dateStr) {
    return publicHolidays.includes(dateStr);
  }

  function isPastDate(date) {
    return date < tomorrow;
  }

  function isUserHoliday(dateStr) {
    return userHolidays.includes(dateStr);
  }

  function isDateInRange(date) {
    if (!startDate || !endDate) return false;
    return date >= startDate && date <= endDate;
  }

  function isStartDate(date) {
    if (!startDate) return false;
    return formatDate(date) === formatDate(startDate);
  }

  function isEndDate(date) {
    if (!endDate) return false;
    return formatDate(date) === formatDate(endDate);
  }

  function countWorkingDays(start, end) {
    let count = 0;
    const current = new Date(start);
    while (current <= end) {
      const dateStr = formatDate(current);
      if (!isWeekend(current) && !isPublicHoliday(dateStr) && !isUserHoliday(dateStr)) {
        count++;
      }
      current.setDate(current.getDate() + 1);
    }
    return count;
  }

  function getDaysLabel(count) {
    if (count === 1) return '1 dzień';
    if (count >= 2 && count <= 4) return `${count} dni`;
    return `${count} dni`;
  }

  function updateButtonText(days) {
    if (days > 0) {
      submitBtn.innerHTML = `<svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>Dodaj ${getDaysLabel(days)} urlopu`;
    } else {
      submitBtn.innerHTML = `<svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>Dodaj urlop`;
    }
  }

  function updateDisplay() {
    if (startDate && endDate) {
      dateRangeText.textContent = `${formatDisplayDate(startDate)} — ${formatDisplayDate(endDate)}`;
      const workingDays = countWorkingDays(startDate, endDate);
      daysCountEl.textContent = `${workingDays} dni roboczych`;
      daysCountEl.classList.remove('hidden');
      clearBtn.classList.remove('hidden');
      submitBtn.disabled = false;
      submitBtn.className = 'w-full inline-flex justify-center items-center px-8 py-3 border border-transparent text-base font-bold rounded-xl text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 shadow-lg shadow-green-200 transition-all hover:-translate-y-0.5';
      updateButtonText(workingDays);
    } else if (startDate) {
      dateRangeText.textContent = `${formatDisplayDate(startDate)} — wybierz datę końcową`;
      const workingDays = countWorkingDays(startDate, startDate);
      daysCountEl.classList.add('hidden');
      clearBtn.classList.remove('hidden');
      submitBtn.disabled = false;
      submitBtn.className = 'w-full inline-flex justify-center items-center px-8 py-3 border border-transparent text-base font-bold rounded-xl text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 shadow-lg shadow-green-200 transition-all hover:-translate-y-0.5';
      updateButtonText(workingDays);
    } else {
      dateRangeText.textContent = 'Wybierz daty w kalendarzu';
      daysCountEl.classList.add('hidden');
      clearBtn.classList.add('hidden');
      submitBtn.disabled = true;
      submitBtn.className = 'w-full inline-flex justify-center items-center px-8 py-3 border border-gray-300 text-base font-bold rounded-xl text-gray-400 bg-gray-100 cursor-not-allowed transition-all';
      updateButtonText(0);
    }

    // Update hidden inputs
    startDateInput.value = startDate ? formatDate(startDate) : '';
    endDateInput.value = endDate ? formatDate(endDate) : '';
  }

  function renderCalendar() {
    calendarGrid.innerHTML = '';
    monthYearEl.textContent = `${monthNames[currentMonth]} ${currentYear}`;

    const firstDay = new Date(currentYear, currentMonth, 1);
    const lastDay = new Date(currentYear, currentMonth + 1, 0);
    const startDayOfWeek = (firstDay.getDay() + 6) % 7; // Monday = 0

    // Empty cells before first day
    for (let i = 0; i < startDayOfWeek; i++) {
      const emptyCell = document.createElement('div');
      emptyCell.className = 'h-10';
      calendarGrid.appendChild(emptyCell);
    }

    // Days of month
    for (let day = 1; day <= lastDay.getDate(); day++) {
      const date = new Date(currentYear, currentMonth, day);
      const dateStr = formatDate(date);
      const dayCell = document.createElement('button');
      dayCell.type = 'button';
      dayCell.textContent = day;

      let classes = 'h-10 w-full rounded-lg text-sm font-medium transition-all ';

      const weekend = isWeekend(date);
      const holiday = isPublicHoliday(dateStr);
      const past = isPastDate(date);
      const userHol = isUserHoliday(dateStr);
      const inRange = isDateInRange(date);
      const isStart = isStartDate(date);
      const isEnd = isEndDate(date);

      // Weekends, holidays, past dates, and user's existing holidays are never selectable
      if (weekend && past) {
        // Past weekend - show as weekend (gray) since weekend has higher priority
        classes += 'bg-gray-200 text-gray-400 cursor-not-allowed ';
      } else if (weekend) {
        classes += 'bg-gray-200 text-gray-400 cursor-not-allowed ';
      } else if (past) {
        // Past non-weekend - brighter than weekend
        classes += 'bg-gray-100 text-gray-400 cursor-not-allowed ';
      } else if (holiday) {
        classes += 'bg-purple-100 text-purple-400 cursor-not-allowed ';
      } else if (userHol) {
        classes += 'bg-emerald-100 text-emerald-600 cursor-not-allowed ';
      } else if (isStart || isEnd) {
        classes += 'bg-green-500 text-white hover:bg-green-600 ';
      } else if (inRange) {
        classes += 'bg-green-100 text-green-700 hover:bg-green-200 ';
      } else {
        classes += 'bg-white text-gray-700 hover:bg-gray-100 border border-gray-200 ';
      }

      dayCell.className = classes;

      // Only allow clicking on non-holiday, non-weekend, non-past, non-user-holiday dates
      if (!holiday && !past && !weekend && !userHol) {
        dayCell.addEventListener('click', () => handleDateClick(date));
      }

      calendarGrid.appendChild(dayCell);
    }
  }

  function handleDateClick(date) {
    if (!startDate || (startDate && endDate) || date < startDate) {
      // Start new selection
      startDate = date;
      endDate = null;
      isSelectingEnd = true;
    } else if (isSelectingEnd) {
      // Complete selection
      endDate = date;
      isSelectingEnd = false;
    }

    renderCalendar();
    updateDisplay();
  }

  function clearSelection() {
    startDate = null;
    endDate = null;
    isSelectingEnd = false;
    renderCalendar();
    updateDisplay();
  }

  // Event listeners
  prevMonthBtn.addEventListener('click', () => {
    currentMonth--;
    if (currentMonth < 0) {
      currentMonth = 11;
      currentYear--;
    }
    renderCalendar();
  });

  nextMonthBtn.addEventListener('click', () => {
    currentMonth++;
    if (currentMonth > 11) {
      currentMonth = 0;
      currentYear++;
    }
    renderCalendar();
  });

  clearBtn.addEventListener('click', clearSelection);

  // Delete holiday form confirmations
  document.querySelectorAll('.delete-holiday-form').forEach(form => {
    form.addEventListener('submit', function(e) {
      if (!confirm('Czy na pewno chcesz usunąć ten urlop?')) {
        e.preventDefault();
      }
    });
  });

  // Initial render
  renderCalendar();
  updateDisplay();
});
</script>

